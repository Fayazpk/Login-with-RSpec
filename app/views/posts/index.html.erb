<!-- app/views/posts/index.html.erb -->
<h1 class="text-center">Home Page</h1>

<div class="text-center mb-4">
  <%= link_to 'Create Post', new_post_path, class: 'btn btn-primary' %>
</div>

<div class="container">
  <div class="row">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.description %></p>
              <div class="d-flex justify-content-between">
                <%= link_to 'Show', post_path(post.id), class: 'btn btn-info btn-sm' %>
                <%= link_to 'Edit', edit_post_path(post.id), class: 'btn btn-warning btn-sm' %>
                <%= button_to 'Delete', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No posts available.</p>
    <% end %>
  </div>
</div>
